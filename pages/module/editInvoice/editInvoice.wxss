/* pages/module/addInvoice/addInvoice.wxss */
.type {
  height: 180rpx;
  line-height: 180rpx;
  padding: 0 40rpx;
  position: relative;
}

.type view:nth-child(1) {
  position: absolute;
  top: -40rpx;
  font-size: 28rpx;
}

.type view:nth-child(2) {
  display: inline-block;
  width: 160rpx;
  height: 56rpx;
  border: 2rpx solid #f5f5f5;
  font-size: 28rpx;
  text-align: center;
  line-height: 56rpx;
  position: relative;
  top: 30rpx;
}

.line {
  height: 8rpx !important;
  background: #f5f5f5;
  width:100%;
}

.message {
  padding: 40rpx;
}

.message-tit {
  font-size: 28rpx;
  font-weight: 600;
}

.message view {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid #f5f5f5;
}

.message view text {
  font-size: 24rpx;
  float: left;
}

.seled {
  display: inline-block;
  width: 70%;
}

.message view input {
  float: right;
  margin-top: 16rpx;
  width: 70%;
  font-size:24rpx;
}

.body-view switch {
  float: right;
}

.save {
  margin-top: 50px;
  background: #24c789;
  color: #fff;
}

.selectDistrict text:nth-child(2){
  width: 70%;
  display: inline-block;
  float: right;
}
