.content {
  width: 100%;
}

.logistic_tit {
  padding: 20rpx 40rpx;
}

.logistic_tit view {
  width: 100%;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.logistic_Info {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.packages {
  width: 100%;
  height: 160rpx;
  background: #f6f6f6;
  display: flex;
}

.packages_item {
  flex-shrink: 0;
  width: 40%;
  height: 113rpx;
  border-radius: 20rpx;
  border: 1rpx solid #dfe1e5;
  font-size: 24rpx;
  display: inline-block;
  margin-left: 5%;
  margin-top: 23rpx;
}

.packages_item text {
  display: block;
  margin-top: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 19rpx;
}

.selected {
  color: #24c789;
  background: #fff;
  border: none;
}

.noLogistic {
  text-align: center;
  font-size: 20px;
  margin-top: 80rpx;
}

.haveLogistic {
  font-size: 22rpx;
  margin-top: 16rpx;
}

.haveLogistic text:nth-child(3) {
  display: block;
}
