.for_search {
  position: relative;
  margin-top: 22rpx;
}

.for_search input {
  margin-left: 40rpx;
  width: 89%;
  height: 56rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  background-color: rgba(251, 250, 250, 1);
  padding-left: 10rpx;
}

.for_search icon {
  position: absolute;
  left: 50rpx;
  top: 10rpx;
  bottom: 0;
  z-index: 2;
  margin: auto;
}

.sel_status {
  margin-top: 24rpx;
  font-size: 28rpx;
  justify-content: space-around;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.sel_status text{
  margin: 0 37rpx;
}

.cur {
  border-bottom: 4rpx solid #24c789;
  padding-bottom:15rpx;
}

.list .list_title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  position: relative;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 40rpx;
}

.list_title text:nth-child(2) {
  float: right;
  color: #24c789;
}

.orderinfo {
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  height: 208rpx;
}

.orderinfo image {
  width: 144rpx;
  height: 136rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 40rpx;
}

.orderinfo .order_name {
  font-size: 28rpx;
  position: relative;
  left: 220rpx;
  display: inline-block;
  width: 67%;
  height: 34rpx;
  overflow: hidden;
  top: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderinfo .order_buynum {
  font-size: 24rpx;
  position: relative;
  left: 220rpx;
  display: inline-block;
  width: 67%;
  height: 34rpx;
  overflow: hidden;
  top: 30rpx;
}

.orderinfo .order_price {
  font-size: 28rpx;
  position: relative;
  left: 220rpx;
  display: inline-block;
  width: 67%;
  height: 34rpx;
  overflow: hidden;
  top: 35rpx;
}

.orderinfo .order-num {
  font-size: 28rpx;
  position: absolute;
  right: 40rpx;
  display: inline-block;
  height: 34rpx;
  overflow: hidden;
  top: 140rpx;
}

.order_bot {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
}

.order_bot .hj {
  font-size: 28rpx;
  margin-left: 40rpx;
  width: 40%;
}

.hj font {
  color: red;
  font-size: 28rpx;
  font-weight: 600;
}

.list:nth-child(n+1) {
  border-top: 14rpx solid rgba(251, 250, 250, 1);
}

.deleteImg {
