/* pages/module/addressAdmin/addressAdmin.wxss */

.addressAdmin {
  width: 100%;
  margin: auto;
}

.addressList {
  height: 140rpx;
  position: relative;
  border-bottom: 4rpx solid #f6f6f6;
  padding: 0 4%;
}

.defaultImg {
  width: 57rpx;
  height: 30rpx;
  margin-top: 88rpx;
  display: inline-block;
  font-size: 17rpx;
  background: #24c789;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
  line-height: 30rpx;
}

.consignee {
  font-size: 28rpx;
  position: absolute;
  left: 4%;
  top: 34rpx;
  font-weight: 600;
  display: inline-block;
  width: 111rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: no-wrap;
}

.mobile {
  font-size: 28rpx;
  position: absolute;
  left: 20%;
  top: 34rpx;
  font-weight: 600;
}

.address {
  font-size: 24rpx;
  position: absolute;
  left: 20%;
  top: 84rpx;
}

.edit {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 4%;
  top: 42rpx;
}

.addBtn {
  position: relative;
}

.add {
  left: 0;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 9%;
  color: #fff;
  font-size: 28rpx;
  right: 0;
  display: inline-block;
  z-index: 111;
  background: #24c789;
  margin: auto;
  border-radius: 8rpx;
}

.noAddress {
  font-size: 30rpx;
  position: absolute;
  top: 300rpx;
  text-align: center;
  width: 100%;
}
