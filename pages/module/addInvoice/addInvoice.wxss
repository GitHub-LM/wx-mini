/* pages/module/addInvoice/addInvoice.wxss */
.type {
  height: 90px;
  line-height: 90px;
  padding: 0 20px;
  position: relative;
}

.type view:nth-child(1) {
  position: absolute;
  top: -20px;
  font-size: 14px;
}

.type view:nth-child(2) {
  display: inline-block;
  width: 80px;
  height: 28px;
  border: 1px solid #f5f5f5;
  font-size: 14px;
  text-align: center;
  line-height: 28px;
  position: relative;
  top: 15px;
}

.line {
  height: 4px !important;
  background: #f5f5f5;
  width:100%;
}

.message {
  padding: 20px;
}

.message-tit {
  font-size: 14px;
  font-weight: 600;
}

.message view {
  height: 40px;
  line-height: 40px;
  border-bottom: 2px solid #f5f5f5;
}

.message view text {
  font-size: 12px;
  float: left;
}

.seled {
  display: inline-block;
  width: 70%;
  float: right !important;
}

.message view input {
  float: right;
  margin-top: 8px;
  width: 70%;
  font-size: 12px;
}

.body-view switch {
  float: right;
}

.save {
  margin-top: 50px;
  background: #24c789;
  color: #fff;
}


