page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.needPay {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  padding: 0 40rpx;
}

.needPay text {
  font-size: 28rpx;
}

.needPay text:nth-child(2) {
  float: right;
  color: red;
}

.wechat {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  padding: 0 40rpx;
  margin-top: 12rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 28rpx;
}

.offline {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  padding: 0 40rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 28rpx;
}
.cir{
  float: right;
}
.offlineInfo{
  background: #fff;
  position: relative;
  padding:40rpx 0;
}
.offlineInfo text{
  display: inline-block;
  font-size: 24rpx;
  text-align: center;
  height: 50rpx;
  color: rgba(168,166,162,1);
  margin: 30rpx 0 0 20%;
}
.toPay{
  width: 80%;
  margin: auto;
  margin-top: 100rpx;
  background: #24c789;
  color: #fff;
}