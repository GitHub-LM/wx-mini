/* pages/module/invoice/invoice.wxss */

.invoice {
  width: 100%;
  background: #f5f5f5;
}

.no-invoice {
  padding: 0 20px;
  background: #fff;
  height: 50px;
  line-height: 50px;
   border-bottom: 12rpx solid #f5f5f5;
}

.no-invoice text {
  display: inline-block;
  width: 160rpx;
  height: 56rpx;
  border: 1px solid #f5f5f5;
  font-size: 28rpx;
  text-align: center;
  line-height: 56rpx;
  
}

.add-invoice {
  position: fixed;
  width: 83%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #24c789;
  color: #fff;
  font-size: 28rpx;
  bottom: 32rpx;
  margin: auto;
  left: 0;
  right: 0;
}

.zpInvoice {
  background: #fff;
  padding: 40rpx;
  height: 220rpx;
  position: relative;
  border-bottom: 12rpx solid #f5f5f5;
}

.zpInvoice text:nth-child(1) {
  display: inline-block;
  width: 80px;
  height: 28px;
  border: 1px solid #f5f5f5;
  font-size: 14px;
  text-align: center;
  line-height: 28px;
}

.zpTitle {
  display: inline-block;
  width: 100%;
  font-size: 14px;
  position: relative;
  top: 11px;
}

.defaultText {
  color: #24c789;
  font-size: 14px;
  position: absolute;
  display: inline-block;
  top: 25px;
  right: 20px;
}

.line-zp {
  display: inline-block;
  width: calc(100% - 40px);
  background: #f5f5f5;
  height: 2px !important;
  position: absolute;
  top: 96px;
  left: 20px;
}

.edit {
  width: 39px;
  height: 21px;
  line-height: 21px;
  font-size: 12px;
  display: inline-block;
  border-radius: 2px;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  border: 1px solid rgba(206, 204, 204, 1);
  position: absolute;
  right: 86px;
  bottom: 15px;
}

.delete {
  width: 78rpx;
  height:42rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  display: inline-block;
  border-radius: 4rpx;
  text-align: center;
  color: red;
  border: 1px solid rgba(206, 204, 204, 1);
  position: absolute;
  right: 20px;
  bottom: 15px;
}
