/* pages/module/login.wxss */

.inp1, .inp2 {
  border: 1px solid #e2e2e2;
  width: 95%;
  margin: auto;
  margin-top: 30rpx;
  display: inline-block;
  border-radius: 8rpx;
  height: 70rpx;
  font-size: 24rpx;
  text-align: left;
  text-indent: 10rpx;
  padding-left: 20rpx;
}

.button {
  margin-top: 60rpx !important;
  width: 90%;
  font-size: 28rpx;
  background: #24c789;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.choose {
  width: 90%;
  /* height: 30rpx; */
  background: red;
  position: relative;
  margin: auto;
}

.register {
  font-size: 24rpx;
  margin-top: 25rpx;
  position: absolute;
  left: 0;
}

.forget-pass {
  position: absolute;
  right: 0;
  font-size: 24rpx;
  margin-top: 25rpx;
}

.cur {
  background: red;
}

.login-log {
  text-align: center;
}
